
#define ONE(var1, var2) \
            (var1-var2)

void main(void) {

  uint8 color = 0;
  uint8 i;

  while (1) {
    __z80_out[0xBF] = 0x00;
    __z80_out[0xBF] = 0xC0;

    for (i = 0; i < 32; i++) {
      __z80_out[0xBE] = color;
    }

    add_to_color(&color, 1);
  }
}

void add_to_color(uint8 *color, uint8 adder) {

  color[0] += adder;
}
