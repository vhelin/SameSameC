static const u8 g_palette[] = { 0x23, 0x17, 0x3F, 0x22, 0x35 };

#define VRAM_PREPARE(address) \
  __z80_out[0xBF] = address & 0xFF; \
  __z80_out[0xBF] = (address >> 8) | 0x40;

// ROM header
__asm(".sdsctag 1.0, \"TEST\", \"Moving a sprite\", \"Ville Helin\"");


void main(void) {

  init();

  // main loop
  while (1) {
    __asm("di",
          "im 1",
          "halt");

    u8 i;

    for (i = 0; i < 32; i++)
        __z80_out[0xBE] = 0x01;

  }
}

void init(void) {

  u16 i;

  // clear VRAM (16k)
  VRAM_PREPARE(0x0000)
  for (i = 0; i < 1024*16; i++)
    __z80_out[0xBE] = 0;

  // set sprite palette (color bank 2, color 0 (sprites))
  VRAM_PREPARE(0xC010)
  for (i = 0; i < 5; i++)
    __z80_out[0xBE] = g_palette[i];

  // set the sprite tile data (first tile @ index 256)
  VRAM_PREPARE(0x2000)
  for (i = 0; i < 16*32; i++)
    __z80_out[0xBE] = g_sprite[i];


}
